      <%= form.date_select :time %>
    <% end %>
    <%= content_tag :div, class: 'js-dependent-fields', data: {'select-id': 'expiration_type','select-value': 'no_of_usage'} do%>
      <%= form.number_field :no_of_usage %>
    <% end %>
  </div>

  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>

  <div class="field">
    <%= form.label :code %>
    <br>
    <%= form.text_field :code %>
  </div>
  <br>
  <br>
  <div class="field">
    <%= form.label :status %>
    <br>
    <%= form.select :status, options_for_select(Coupone.statuses.map {|k, v| [k, k]}) %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= form.submit %>
