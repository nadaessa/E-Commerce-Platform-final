  <br>
  <div class="field">
    <%= form.label :value %>
    <br>
    <%= form.number_field :value %>
  </div>
  <br>
  <div class="field" >
    <%= form.label :expiration_type  %>
    <br>
    <%= form.select :expiration_type, select_list = [ 'time', 'no_of_usage'] %>
