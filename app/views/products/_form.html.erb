<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <br>
<br>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <br>
  <br>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <br>
<br>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <br>
  <br>

  <div class="field">
    <%= form.label :store_id %>
    <%= form.collection_select(:store_id, @stores, :id, :name, :include_blank => "Please select") %>
  </div>

  <br>
  <br>

  <div class="field">
  <%= form.label :category_id %>
  <%= form.collection_select(:category_id, @categories, :id, :name, :include_blank => "Please select") %>
</div>

<br>
<br>

  <div class="field">
    <%= form.label :brand_id %>
    <%= form.collection_select(:brand_id, @brands, :id, :name, :include_blank => "Please select") %>
  </div>

  <br>
  <br>

  <div class="field">
      <%= form.label :image %>
      <%= form.file_field :image %>
  </div>

  <br>
  <br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
