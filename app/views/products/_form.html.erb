  <br>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price ,class:"form-control"%>
  </div>

  <br>
<br>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity ,class:"form-control"%>
  </div>

  <br>
  <br>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select(:category_id, Category.all, :id, :name, :include_blank => "Please select category") %>
  </div>

